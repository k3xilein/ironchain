# === IRON CHAIN CONFIGURATION ===

# Operation Mode
RUN_MODE=PAPER_LIVE

# Network
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_COMMITMENT=confirmed

# Wallet (⚠️ KEEP SECRET!)
WALLET_PRIVATE_KEY=your_base58_private_key_here

# Trading
INITIAL_CAPITAL_USDC=1000
TRADING_PAIR=SOL/USDC
SOL_MINT=So11111111111111111111111111111111111111112
USDC_MINT=EPjFWdd5AufqSSqeM2qN1xzybapzT7eMu1ouP7C1F51D

# Risk
RISK_PER_TRADE=0.01
MAX_POSITION_SIZE=0.40
MAX_DRAWDOWN_PERCENT=0.20
ENABLE_KILL_SWITCH=true
MAX_SLIPPAGE=0.005
MIN_PROFIT_FEE_RATIO=3.0

# Strategy - Regime (4h)
REGIME_TIMEFRAME=4h
REGIME_EMA_FAST=50
REGIME_EMA_SLOW=200
REGIME_ADX_PERIOD=14
REGIME_ADX_THRESHOLD=20

# Strategy - Entry (15m)
ENTRY_TIMEFRAME=15m
ENTRY_DONCHIAN_PERIOD=20
ENTRY_RSI_PERIOD=14
ENTRY_RSI_LOW=50
ENTRY_RSI_HIGH=75

# Strategy - Exit
STOP_LOSS_ATR_MULTIPLIER=2.5
PARTIAL_TP_R_MULTIPLE=1.5
PARTIAL_TP_PERCENT=0.50
TRAILING_EMA_PERIOD=20
TIME_EXIT_HOURS=12
TIME_EXIT_MIN_R=1.0

# Liquidity
MAX_SPREAD=0.002
MIN_LIQUIDITY_DEPTH=5000
MAX_PRICE_IMPACT=0.01

# Oracle
PYTH_PRICE_FEED=H6ARHf6YXhGYeQfUzQNGk6rDNnLBQKrenN712K4AQJEG
MAX_PRICE_STALENESS=60
MAX_ORACLE_DIVERGENCE=0.01

# Timing
CHECK_INTERVAL=5000
CANDLE_CLOSE_DELAY=2000
TX_CONFIRMATION_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
LOG_DIRECTORY=./logs
MAX_LOG_FILE_SIZE=100
ENABLE_AUDIT_LOG=true

# Database
DATABASE_PATH=./data/trades.db
ENABLE_DATABASE=true

# Safety
ENABLE_BALANCE_CHECK=true
ENABLE_RPC_HEALTH_CHECK=true
ENABLE_ORACLE_HEALTH_CHECK=true
KILL_SWITCH_FILE=./STOP_AND_FLATTEN

# Paper Mode
PAPER_FEE_PERCENT=0.002
PAPER_SLIPPAGE_BASE=0.001
PAPER_SLIPPAGE_SCALING=0.0001
PAPER_ENABLE_DELAYS=true